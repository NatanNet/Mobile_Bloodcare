            android:textColor="#A6192E"
            android:textSize="20sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="8dp"
            android:background="@drawable/bg_acaraputih"
            android:gravity="center_vertical">

            <FrameLayout
                android:layout_width="50dp"
                android:layout_height="50dp">
                <ImageView
                    android:id="@+id/iconGolonganAplus"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/bg_persegi" />
                <TextView
                    android:id="@+id/textAplus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="A+"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/black" />
            </FrameLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingStart="8dp">
                <TextView
                    android:id="@+id/DarahTerkumpulAplus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Darah terkumpul: 0"
                    android:textSize="14sp" />
                <TextView
                    android:id="@+id/KebutuhanDarahAplus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Kebutuhan darah: 0"
                    android:textSize="14sp" />
            </LinearLayout>

            <ImageView
                android:id="@+id/iconEditAplus"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/ic_edit"
                android:contentDescription="Edit Data"
                android:padding="4dp" />
        </LinearLayout>

