<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/merah2" /> <!-- Warna saat ditekan -->
            <corners android:radius="16dp" /> <!-- Radius yang lebih besar untuk sudut melengkung -->
            <stroke android:width="1dp" android:color="@color/black" /> <!-- Garis tepi -->
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/merahpmi" /> <!-- Warna default -->
            <corners android:radius="16dp" /> <!-- Radius yang lebih besar untuk sudut melengkung -->
            <stroke android:width="1dp" android:color="@color/black" /> <!-- Garis tepi -->
        </shape>
    </item>
</selector>
